mixin priceCards (items)
    .cardBox 
        for item in items
            div.card
                img(src=item.img, alt="")
                h4 #{item.name}
                h5  
                    sup $
                    span #{item.price}
                    sub /month
                p #{item.p}
                a #{item.button}
            